{
  "name": "@speajus/mermaid-to-svg",
  "private":false,
  "version": "0.1.0",
  "description": "Render Mermaid diagrams to SVG without a browser",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./themes": {
      "import": "./dist/themes/index.mjs",
      "require": "./dist/themes/index.cjs",
      "types": "./dist/themes/index.d.ts"
    }
  },
  "bin": {
    "mermaid-to-svg": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Justin Spears <speajus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speajus/mermaid-to-svg.git"
  },
  "scripts": {
    "build": "tsup",
    "test": "node --import tsx --test test/**/*.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "packageManager": "pnpm@9.14.4",
  "license": "MIT",
  "dependencies": {
    "elkjs": "^0.9.0",
    "jsdom": "^28.1.0",
    "mermaid": "^11.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.0",
    "@types/node": "^25.3.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0"
  }
}
